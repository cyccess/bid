@{
    Layout = null;
}
<form class="form-horizontal aui" id="form1" action="" method="post">
    <fieldset>
        <div class="form-group">
            <label class="col-sm-3 control-label">模块名称</label>
            <div class="col-sm-5">
                <input type="text" name="ModuleName" class="form-control" datatype="*" value="${ModuleName}" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">模块地址</label>
            <div class="col-sm-5">
                <input type="text" id="pwd1" name="ModuleUrl" class="form-control" datatype="*" value="${ModuleUrl}" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">排序编号</label>
            <div class="col-sm-5">
                <input type="text" name="OrderSort" class="form-control" datatype="n" value="${OrderSort}" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">模块图标</label>
            <div class="col-sm-5">
                <input type="text" name="ModuleIcon" class="form-control" value="${ModuleIcon}" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">是否启用</label>
            <div class="col-sm-5">
                <label class="radio-inline">
                    <input id="rdoStatus1" name="Status" type="radio" {{if Status == 1}} checked="checked" {{/if}} value="1">是
                </label>
                <label class="radio-inline">
                    <input id="rdoStatus2" name="Status" type="radio" {{if Status == 0}} checked="checked" {{/if}} value="0">否
                </label>
            </div>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-default btn-sm" id="cancel">取消</button>
            <button type="submit" class="btn btn-success btn-sm" id="sure">保存</button>
        </div>
    </fieldset>
</form>