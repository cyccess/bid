@{
    Layout = null;
}
<div class="modal-content">
    <form class="form-horizontal aui" id="form1" action="" method="post">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>创建项目</h3>
        </div>
        <div class="modal-body">
            <fieldset>
                <div class="form-group">
                    <label class="col-sm-3 control-label">名称</label>
                    <div class="col-sm-5">
                        <input type="text" name="PermissionAction" class="form-control" datatype="*" placeholder="项目名称" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">链接地址</label>
                    <div class="col-sm-5">
                        <input type="text" name="LinkUrl" class="form-control" placeholder="链接地址" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">描述</label>
                    <div class="col-sm-5">
                        <textarea class="form-control" name="Description" placeholder="项目描述"></textarea>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default btn-sm" id="cancel" data-dismiss="modal">关闭</button>
            <button type="submit" class="btn btn-primary btn-sm" id="sure">保存</button>
        </div>
    </form>
</div>
